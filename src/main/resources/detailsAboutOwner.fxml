<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import com.sun.javafx.scene.control.IntegerField?>
<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.fis.student.sre.controllers.DetailsAboutOwnerController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" text="More details about you" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <IntegerField fx:id="telephoneOwnerField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="descriptionOwnerField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="addressOwnerField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Text fx:id="detailsMessage" GridPane.columnIndex="1" GridPane.rowIndex="9" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <children>
            <Button fx:id="buttonAllDone" id="buttonAllDone" layoutX="216.0" layoutY="440.0" mnemonicParsing="false" onAction="#handleDetailsAboutOwnerAction" text="All done">
            </Button>
        </children>
    </HBox>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
